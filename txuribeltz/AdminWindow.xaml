<Window x:Class="txuribeltz.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:txuribeltz"
        mc:Ignorable="d"
        Title="Administrazio Panela" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Administrazio Panela" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="White">

            <!-- Tab: Erabiltzaileak Kudeatu -->
            <TabItem Header="Erabiltzaileak" FontSize="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Users DataGrid -->
                    <DataGrid Grid.Row="1" 
                             x:Name="dgUsers"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             AlternatingRowBackground="#F9F9F9"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Erabiltzailea" Binding="{Binding username}" Width="*"/>
                            <DataGridTextColumn Header="Pasahitza" Binding="{Binding password}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Mota" Binding="{Binding erabiltzailemota}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Margin="0,15,0,0">

                        <Button x:Name="btnChangePassword"
                                Content="Pasahitza Aldatu" 
                                Width="130" 
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#FF00A86B"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>

                        <Button x:Name="btnDeleteUser"
                                Content="Ezabatu" 
                                Width="100" 
                                Height="35"
                                Background="#F44336"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
