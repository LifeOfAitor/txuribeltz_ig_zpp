<Window x:Class="txuribeltz.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Txuribeltz - Partida" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF2C2C2C">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Player Info -->
        <Border Grid.Column="0" Background="#FF3C3C3C" Margin="10" CornerRadius="10" Padding="15">
            <StackPanel>
                <TextBlock Text="JOKALARIAK" FontSize="18" FontWeight="Bold" 
                           Foreground="#e94560" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Current Player -->
                <Border Background="#FF2C2C2C" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ZU" FontSize="12" Foreground="#94a1b2" FontWeight="SemiBold"/>
                        <TextBlock x:Name="lblYourUsername" Text="Username" FontSize="16" 
                                   Foreground="White" FontWeight="Bold" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="ELO: " FontSize="14" Foreground="#94a1b2"/>
                            <TextBlock x:Name="lblYourElo" Text="1200" FontSize="14" 
                                       Foreground="#e94560" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Opponent -->
                <Border Background="#FF2C2C2C" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="AURKALARIA" FontSize="12" Foreground="#94a1b2" FontWeight="SemiBold"/>
                        <TextBlock x:Name="lblOpponentUsername" Text="Opponent" FontSize="16" 
                                   Foreground="White" FontWeight="Bold" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="ELO: " FontSize="14" Foreground="#94a1b2"/>
                            <TextBlock x:Name="lblOpponentElo" Text="1200" FontSize="14" 
                                       Foreground="#4ecca3" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Game Status -->
                <Border Background="#FF2C2C2C" CornerRadius="8" Padding="12" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="EGOERA" FontSize="12" Foreground="#94a1b2" FontWeight="SemiBold"/>
                        <TextBlock x:Name="lblGameStatus" Text="" FontSize="14" 
                                   Foreground="#4ecca3" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Margin="0,30,0,0">
                    <Button x:Name="btnSurrender" Content="AMORE EMAN" 
                            Background="#e94560" Foreground="White" 
                            FontWeight="Bold" FontSize="14"
                            Height="40" Margin="0,0,0,10"
                            BorderThickness="0" Cursor="Hand"
                            Click="Surrender_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#e94560"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#d63447"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnLeave" Content="PARTIDA UTZI" 
                            Background="#FF2C2C2C" Foreground="White" 
                            FontWeight="Bold" FontSize="14"
                            Height="40"
                            BorderThickness="0" Cursor="Hand"
                            Click="Leave_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#0f3460"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1a4d7a"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- CENTER: Game Board -->
        <Border Grid.Column="1" Background="#FF3C3C3C" Margin="10" CornerRadius="10" Padding="20">
            <Viewbox>
                <Border Background="#8B4513" Padding="15" CornerRadius="5">
                    <UniformGrid x:Name="gameBoard" Rows="15" Columns="15" 
                                 Width="600" Height="600"/>
                </Border>
            </Viewbox>
        </Border>

        <!-- RIGHT PANEL: Chat -->
        <Border Grid.Column="2" Background="#FF3C3C3C" Margin="10" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Header -->
                <TextBlock Grid.Row="0" Text="TXATA" FontSize="18" FontWeight="Bold" 
                           Foreground="#e94560" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Chat Messages -->
                <Border Grid.Row="1" Background="#FF2C2C2C" CornerRadius="8" Padding="10">
                    <ScrollViewer x:Name="chatScroll" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="chatMessages"/>
                    </ScrollViewer>
                </Border>

                <!-- Chat Input -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtChatMessage" Grid.Column="0"
                             Background="#FF2C2C2C" Foreground="White"
                             BorderThickness="0" Padding="10"
                             FontSize="14" Height="40"
                             VerticalContentAlignment="Center"
                             KeyDown="ChatMessage_KeyDown">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8,0,0,8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button x:Name="btnSendChat" Grid.Column="1" Content="Bidali" 
                            Background="#4ecca3" Foreground="White"
                            FontWeight="Bold" FontSize="16"
                            Width="70" Height="40"
                            BorderThickness="0" Cursor="Hand"
                            Click="SendChat_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4ecca3"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="0,8,8,0" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3daa85"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
