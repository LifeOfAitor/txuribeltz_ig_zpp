<Window x:Class="txuribeltz.SingUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:txuribeltz"
        mc:Ignorable="d"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2C2C2C"
        Title="Txuribeltz - Sign up"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Izenburua -->
        <TextBlock Text="TXURIBELTZ - Erregistratu"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Erregistratzeko datuak -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="ERABILTZAILEA:" Foreground="White" FontSize="14"/>
            <TextBox x:Name="txtErabiltzailea" Margin="0,5,0,15" Height="30" FontSize="14"/>

            <TextBlock Text="PASAHITZA:" Foreground="White" FontSize="14"/>
            <PasswordBox x:Name="txtPasahitza" Margin="0,5,0,15" Height="30" FontSize="14"/>

            <TextBlock Text="PASAHITZA ERREPIKATU:" Foreground="White" FontSize="14"/>
            <PasswordBox x:Name="txtPasahitza2" Margin="0,5,0,25" Height="30" FontSize="14"/>

            <Button x:Name="btnRegistratu" Content="ERREGISTRATU" 
                    Background="#FF00A86B" Foreground="White"
                    FontWeight="Bold" Height="40" 
                    Click="btnRegistratu_Click"/>

            <Button x:Name="btnAtzera" Content="ATZERA" 
                    Background="#FF6C757D" Foreground="White"
                    FontWeight="Bold" Height="40" Margin="0,10,0,0"
                    Click="btnAtzera_Click"/>
        </StackPanel>

        <!-- Erroreak agertuko dira hemen, baldin badaude -->
        <TextBlock x:Name="txt_erroreak" Grid.Row="2" Text="" 
                   HorizontalAlignment="Center" 
                   FontSize="12" Foreground="PaleVioletRed" Margin="0,20,0,0"/>
    </Grid>
</Window>
