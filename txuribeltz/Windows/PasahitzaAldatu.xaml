<Window x:Class="txuribeltz.PasahitzaAldatu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:txuribeltz"
        mc:Ignorable="d"
        Background="#FF2C2C2C"
        WindowStartupLocation="CenterScreen"
        Title="pasahitza aldatzeko menua" Height="300" Width="300">
    
        <Grid Margin="20">
            
            <StackPanel  VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">

                <TextBlock Text="Pasahitza aldatu" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,40"/>
                <TextBox x:Name="txtbox_pasahitzberria" 
                         Margin="0,5,0,25" 
                         Height="30"
                         Width="260"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"/>
                <Label Name="lbl_mezua" 
                       Content="" 
                       Foreground="PaleVioletRed" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                <Button x:Name="btnChangePassword"
                        Content="Pasahitza Aldatu" 
                        Width="130" 
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#FF00A86B"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="pasahitzaAldatu"/>
            </StackPanel>
        </Grid>
</Window>
