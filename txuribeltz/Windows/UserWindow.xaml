<Window x:Class="txuribeltz.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:txuribeltz"
        mc:Ignorable="d"
        Title="Txuribeltz - Jokalaria" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF2C2C2C">
	<Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                    x:Name="txt_username"
                    Grid.Column="0"
                    Text="Izena" 
                    FontSize="28" 
                    FontWeight="Bold" 
                    Foreground="White"
                    VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    x:Name="btnLogout"
                    Content="Saioa Itxi" 
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    Width="120"
                    Click="LogoutButton_Click"
                    VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Erabiltzailearen informazioa -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="NIRE PROFILA" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,15"/>

                <Border Background="#FF3C3C3C" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <StackPanel x:Name="userInfoDisplay" Margin="0,0,0,15">
                            <TextBlock Text="Erabiltzailea:" 
                                       Foreground="#FFCCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="lblUsername" 
                                       Text="Kargatzen..." 
                                       Foreground="White" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Elo:" 
                                       Foreground="#FFCCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="lblElo" 
                                       Text="1000" 
                                       Foreground="#FF00A86B" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Irabazitako partidak:" 
                                       Foreground="#FFCCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="lblIrabazita" 
                                       Text="0" 
                                       Foreground="#FF00A86B" 
                                       FontSize="14"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Galdutako partidak:" 
                                       Foreground="#FFCCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="lblGalduta" 
                                       Text="0" 
                                       Foreground="#F44336" 
                                       FontSize="14"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Garaipen Tasa:" 
                                       Foreground="#FFCCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,0,3"/>
                            <TextBlock x:Name="lblWinRate" 
                                       Text="0%" 
                                       Foreground="#FF00A86B" 
                                       FontSize="14"
                                       Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Editatzeko -->
                        <Button x:Name="btnEditProfile"
                                Content="Profila Aldatu" 
                                Background="#FF00A86B" 
                                Foreground="White"
                                FontWeight="Bold"
                                Height="35"
                                Click="EditProfile_Click"
                                Margin="0,0,0,10"/>

                        <!-- Editatzeko (dago ezkutatuta) -->
                        <StackPanel x:Name="editFormPanel" Visibility="Collapsed" Margin="0,10,0,0">

                            <TextBlock Text="Pasahitza Berria:" Foreground="White" FontSize="11" Margin="0,0,0,3"/>
                            <PasswordBox x:Name="txtNewPassword" Height="30" Margin="0,0,0,10" FontSize="12"/>

                            <Button x:Name="btnGorde"
                                    Content="Gorde" 
                                    Background="#FF00A86B" 
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="30"
                                    Click="SaveChanges_Click"
                                    Margin="0,0,0,5"/>

                            <Button x:Name="btnCancelEdit"
                                    Content="Utzi" 
                                    Background="#FF6C757D" 
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="30"
                                    Click="CancelEdit_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Partidaren kola -->
            <StackPanel Grid.Column="1" Margin="15,0,15,0">
                <TextBlock Text="PARTIDAK BILATU" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,15"/>

                <Border Background="#FF3C3C3C" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15"
                        MinHeight="200">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                        <Button x:Name="btnPardilaBilatu"
                                Content="PARTIDA BILATU" 
                                Background="#FF00A86B" 
                                Foreground="White"
                                FontWeight="Bold"
                                Height="50"
                                FontSize="16"
                                Click="QueueMatch_Click"/>
                        <TextBlock x:Name="lblPartidaBilatzen"
                               Visibility="Collapsed"
                               Text="Partida bilatzen..." 
                               Foreground="#FFCCCCCC"
                               TextAlignment="Center"
                               Margin="0,20"/>
                    </StackPanel>
                </Border>

                <!-- Aurkitutako partidaren lehiakide informazioa -->
                <Border Background="#FF3C3C3C" 
                        CornerRadius="8" 
                        Padding="20"
                        x:Name="partidaInformazioa"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Zure Aurkaria:" 
                                   Foreground="#FFCCCCCC" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="lblOpponent" 
                                   Text="-" 
                                   Foreground="#F44336" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Elo:" 
                                   Foreground="White" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="lblEloAurkaria" 
                                   Text="-" 
                                   Foreground="#F44336" 
                                   FontSize="14"
                                   Margin="0,0,0,15"/>

                        <Button x:Name="btnStartMatch"
                                Content="Partida Hasi" 
                                Background="#FF00A86B" 
                                Foreground="White"
                                FontWeight="Bold"
                                Height="40"
                                Click="StartMatch_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Top 10 jokalariak -->
            <StackPanel Grid.Column="2" Margin="15,0,0,0">
                <TextBlock Text="TOP 10 JOKALARIAK" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,15"/>

                <Border Background="#FF3C3C3C" 
                        CornerRadius="8" 
                        Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                        <StackPanel x:Name="topJokalariakPanel">
                            <!-- Top jokalariak hemen gehituko dira dinamikoki -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
